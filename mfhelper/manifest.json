{
  "manifest_version": 3,
  "name": "mfhelper",
  "version": "1.0",
  "description": "Automatically handles alerts and claims on feyorra.site and earn-pepe.com.",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "web_accessible_resources": [
      {
          "resources": ["config.json"],
          "matches": ["<all_urls>"]
      }
  ],
  "content_scripts": [
      {
          "matches": [
              "https://earn-pepe.com/member/faucet", 
              "https://feyorra.site/member/faucet"
          ],
          "js": ["content.js"]
      }
  ]
}
